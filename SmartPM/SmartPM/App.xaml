<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartPM.App">
	<Application.Resources>

		<!-- Application resource dictionary -->
        <ResourceDictionary>
            <Style x:Name="LabelStyle"
                   TargetType ="Label">
                <Setter Property="Label.FontFamily">
                    <Setter.Value>
                        <OnPlatform x:TypeArguments="x:String">
                            <OnPlatform.Android>PromptLight.ttf#PromptLight</OnPlatform.Android>
                            <OnPlatform.iOS>Courier New</OnPlatform.iOS>
                        </OnPlatform>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Name="EntryStyle"
                   TargetType ="Entry">
                <Setter Property="Entry.FontFamily">
                    <Setter.Value>
                        <OnPlatform x:TypeArguments="x:String">
                            <OnPlatform.Android>PromptLight.ttf#PromptLight</OnPlatform.Android>
                            <OnPlatform.iOS>Courier New</OnPlatform.iOS>
                        </OnPlatform>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>

	</Application.Resources>
</Application>